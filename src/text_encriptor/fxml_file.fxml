<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.RadioButton?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane id="AnchorPane" prefHeight="310.0" prefWidth="345.0" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="text_encriptor.fxml_fileController">
   <children>
      <VBox layoutX="14.0" layoutY="14.0" prefHeight="295.0" prefWidth="320.0" spacing="5.0">
         <children>
            <HBox prefHeight="45.0" prefWidth="320.0" spacing="2.0">
               <children>
                  <TextField fx:id="textField" prefHeight="40.0" prefWidth="320.0" promptText="Short Text Lines ...">
                     <font>
                        <Font name="System Bold" size="13.0" />
                     </font>
                  </TextField>
               </children>
            </HBox>
            <HBox prefHeight="65.0" prefWidth="320.0" spacing="10.0">
               <children>
                  <Button mnemonicParsing="false" onAction="#encrypt" prefHeight="60.0" prefWidth="155.0" text="ENCRYPT">
                     <font>
                        <Font name="System Bold" size="24.0" />
                     </font>
                  </Button>
                  <Button layoutX="10.0" layoutY="10.0" mnemonicParsing="false" onAction="#decrypt" prefHeight="60.0" prefWidth="155.0" text="DECRYPT">
                     <font>
                        <Font name="System Bold" size="24.0" />
                     </font>
                  </Button>
               </children>
            </HBox>
            <TextArea fx:id="textArea" editable="false" prefHeight="115.0" prefWidth="320.0" />
            <HBox layoutX="10.0" layoutY="55.0" prefHeight="55.0" prefWidth="320.0" spacing="10.0">
               <children>
                  <RadioButton fx:id="radioButton" mnemonicParsing="false" onAction="#clickRadio" prefHeight="50.0" prefWidth="146.0" text="ALLOW LONG TEXTS" />
                  <Button layoutX="10.0" layoutY="10.0" mnemonicParsing="false" onAction="#code" prefHeight="50.0" prefWidth="100.0" text="CODE">
                     <font>
                        <Font name="System Bold" size="14.0" />
                     </font>
                  </Button>
                  <Button layoutX="156.0" layoutY="10.0" mnemonicParsing="false" onAction="#decode" prefHeight="50.0" prefWidth="100.0" text="DECODE">
                     <font>
                        <Font name="System Bold" size="14.0" />
                     </font>
                  </Button>
               </children>
            </HBox>
         </children>
      </VBox>
   </children>
</AnchorPane>
